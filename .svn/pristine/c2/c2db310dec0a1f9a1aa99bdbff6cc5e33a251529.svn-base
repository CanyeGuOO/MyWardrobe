    if (self.didTap) {
        [self showOtherControls:_tap];
        [UIView animateWithDuration:0.5 animations:^{
            
            _tap.view.transform = CGAffineTransformMakeScale(1, 1);
            _tap.view.mw_origin = CGPointZero;
            self.didTap = NO;
        }];
        return;
    }
    
